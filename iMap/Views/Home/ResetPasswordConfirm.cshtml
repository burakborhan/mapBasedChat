@model iMap.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<br />

<h1 class="col-md-4 offset-md-4">Reset Your Password</h1>
<br />
<br />


<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class=""></div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create new password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



